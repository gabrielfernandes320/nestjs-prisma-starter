{
    "name": "nestjs-template-v1",
    "private": true,
    "version": "1.0.0",
    "description": "Nestjs-prisma-starter",
    "prisma": {
        "seed": "ts-node ./src/modules/database/prisma/seeds/seed.ts"
    },
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
        "seed:run": "npx prisma db seed",
        "migration:run:dev": "npx prisma migrate dev --schema=./src/modules/database/prisma/schema.prisma",
        "prisma:studio": "npx prisma studio --schema=./src/modules/database/prisma/schema.prisma",
        "migration:run:prod": "npx prisma migrate deploy --schema=./src/modules/database/prisma/schema.prisma",
        "migration:create": "npx prisma migrate dev --schema=./src/modules/database/prisma/schema.prisma --name"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@nestjs-modules/mailer": "^1.6.0",
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^1.0.1",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^8.0.1",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/swagger": "^5.0.9",
        "@prisma/client": "^3.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/faker": "^5.5.8",
        "@types/hapi__joi": "^17.1.7",
        "@types/passport": "^1.0.7",
        "@types/passport-local": "^1.0.34",
        "@types/validator": "^13.6.3",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "factory.ts": "^0.5.2",
        "faker": "^5.5.3",
        "handlebars": "^4.7.7",
        "mysql": "^2.18.1",
        "nodemailer": "^6.6.3",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/node": "^16.0.0",
        "@types/nodemailer": "^6.4.4",
        "@types/passport-jwt": "^3.0.6",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "prisma": "^3.1.1",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
